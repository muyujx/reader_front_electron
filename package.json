{
  "name": "reader",
  "version": "1.1.0",
  "main": "build/main/main.js",
  "license": "MIT",
  "author": "muyu",
  "description": "reader",
  "scripts": {
    "pre-build": "node scripts/prepare.js",
    "dev": "npm run pre-build && node scripts/dev-server.js",
    "build": "npm run pre-build && node scripts/build.js && electron-builder ",
    "build:win": "npm run pre-build && node scripts/build.js && electron-builder --win",
    "build:dev:local": "npm run build:win && powershell -ExecutionPolicy Bypass -File deploy_local.ps1"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "animate.css": "^4.1.1",
    "axios": "^1.12.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.11.4",
    "hotkeys-js": "3.13.15",
    "less": "^4.4.2",
    "moment": "^2.30.1",
    "pinia": "^3.0.3",
    "set-cookie-parser": "^2.7.1",
    "vue": "^3.5.22",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/set-cookie-parser": "^2.4.10",
    "@vitejs/plugin-vue": "^6.0.1",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "vite": "^7.1.9"
  },
  "build": {
    "appId": "com.muyu",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "productName": "Reader",
    "files": [
      "build/**/*",
      "assets/**"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    }
  }
}
