{
  "name": "reader",
  "version": "1.0.0",
  "main": "build/main/main.js",
  "license": "MIT",
  "author": "muyu",
  "description": "reader",
  "scripts": {
    "electron:dev": "node scripts/dev-server.js",
    "electron:build": "node scripts/build.js && electron-builder ",
    "build:win": "node scripts/build.js && electron-builder --win"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "animate.css": "^4.1.1",
    "axios": "^1.9.0",
    "electron-log": "^5.4.1",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.10.2",
    "hotkeys-js": "^3.13.12",
    "less": "^4.3.0",
    "moment": "^2.30.1",
    "pinia": "^3.0.3",
    "set-cookie-parser": "^2.7.1",
    "vue": "^3.5.16",
    "vue-router": "4"
  },
  "devDependencies": {
    "@types/set-cookie-parser": "^2.4.10",
    "@vitejs/plugin-vue": "^5.2.4",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.8.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.7.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.muyu",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "productName": "Reader",
    "files": [
      "build/**/*",
      "assets/**"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    }
  }
}
